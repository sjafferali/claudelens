# MongoDB Configuration
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=changeme-use-strong-password
MONGODB_PORT=27017

# Application Configuration
CLAUDELENS_PORT=3000

# Security - IMPORTANT: Change these in production!
SECRET_KEY=your-secret-key-here-change-in-production

# CORS Origins (comma-separated list)
# Add your production domain here
BACKEND_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=info

# Optional: External MongoDB URL (if not using the included MongoDB container)
# MONGODB_URL=mongodb://user:pass@host:port/claudelens?authSource=admin